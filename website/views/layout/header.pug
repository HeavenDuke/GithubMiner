nav.navbar.navbar-inverse
    .container
        .navbar-header
            button.navbar-toggle(data-toggle="collapse" data-target="#navbar-collapse")
                span.sr-only 切换导航
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/")
                i.fa.fa-github
                |  GithubMiner
            form.visible-xs(style="margin: 0px;")
                input.form-control(type="text" name="query" value=query placeholder="search here")
        .collapse.navbar-collapse#navbar-collapse
            ul.nav.navbar-nav
                li
                    a(href="/ranking") Ranking
                if !user
                    li.visible-xs
                        a(href="#")
                            i.fa.fa-github
                            |  Sign In
                else
                    li.visible-xs
                        a(href="")
                            i.fa.fa-github
                            |  Sign Out
            ul.nav.navbar-nav.pull-right.hidden-xs
                if !user
                    li
                        a(href="#")
                            i.fa.fa-github
                            |  Sign In
                else
                    li.dropdown
                        a.dropdown-toggle(data-toggle="dropdown" href="#")
                            i.fa.fa-github
                            = " " + user.info.login
                        ul.dropdown-menu
                            li
                                a(onclick="$(this).children().submit();") Sigh Out
                                    form.hidden(method="POST" action="/user?_method=DELETE")
            form.navbar-form.pull-right.hidden-xs(action="/search" method="GET")
                .form-group.input-group
                    input.form-control(type="text" name="query" value=query placeholder="search here")
                    span.input-group-btn
                        button.btn.btn-inverse
                            = "　"
                            i.fa.fa-search
